---
import Header from "../components/Header.astro";
import HeroAction from "../components/HeroAction.astro";
import CardBlock from "../components/CardBlock.astro";
import About from "../components/About.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
---

<html lang="es">
  <head>
    <title>Landing Page Sobresaliente</title>
    <meta name="description" content="Una landing page moderna y atractiva, construida con Astro y TailwindCSS.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body class="bg-gray-50 text-gray-900">
    <Header />
    <main>
      <section id="home">
        <HeroAction />
      </section>
      <section id="features">
        <CardBlock />
      </section>
      <section id="about" class="bg-gray-100">
        <About />
      </section>
      <section id="contact">
        <Contact />
      </section>
    </main>
    <Footer />
  </body>
</html>
